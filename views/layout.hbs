<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Intro.ooo</title>
		<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<!-- axious for ajax -->
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<!-- Our app logic -->
<script src="src/lib.js" type="text/javascript"></script>
	</head>
	<body>
		{{#if user}}
			<p>
			<a href="/">Home</a> |
			<a href="/account">Account</a> |
			<a href="/logout">Log Out</a>
			</p>
		{{else}}
			<p>
			<a href="/">Home</a> |
			<a href="/login">Log In</a>
			</p>
		{{/if}}

		{{{ body }}}

		{{#if user.fb_accessToken}}
			<textarea name="name" rows="8" cols="80" id="fbPost"></textarea>
			<button onclick="app.postOnFB('{{user.fb_accessToken}}')">Share on FB</button>
		{{/if}}

		{{#if user.twitter_token }}
			<textarea name="name" rows="8" cols="80" id="twitterPost"></textarea>
			<button
				onclick="app.postOnTwitter('{{user.twitter_token}}','{{user.twitter_tokenSecret}}')">
				Share on Twitter
			</button>
		{{/if}}


		{{#if user.linkedin_token }}
			<textarea name="name" rows="8" cols="80" id="linkedinPost"></textarea>
			<button
				onclick="app.postOnLinkedin('{{user.linkedin_token}}','{{user.linkedin_tokenSecret}}')">
				Share on LinkedIn
			</button>
		{{/if}}
	</body>
</html>
